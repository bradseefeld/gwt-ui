<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:e='urn:import:com.google.gwt.editor.ui.client'
	xmlns:a='urn:import:com.google.gwt.editor.ui.client.adapters'
	xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
	xmlns:b2="urn:import:com.github.gwtbootstrap.datepicker.client.ui"
	xmlns:b3='urn:import:com.bradley.gwt.user.client.ui'>

	<b:Fieldset>
		<b:ControlGroup>
			<b:ControlLabel for="date" ui:field="dateLabel">Date</b:ControlLabel>
			<b:Controls>
				<b2:DateBox b:id="date" ui:field="date" />
				<b:HelpInline>*</b:HelpInline>
			</b:Controls>
		</b:ControlGroup>
		<b:ControlGroup ui:field="timeGroup">
			<b:ControlLabel for="time" ui:field="timeLabel">Time</b:ControlLabel>
			<b:Controls>
				<b3:TimeBox ui:field="time" />
				<b:HelpInline>*</b:HelpInline>
			</b:Controls>
		</b:ControlGroup>
	</b:Fieldset>
</ui:UiBinder>