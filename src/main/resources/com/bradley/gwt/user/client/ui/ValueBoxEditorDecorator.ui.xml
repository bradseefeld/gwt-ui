<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:e='urn:import:com.google.gwt.editor.ui.client'
	xmlns:a='urn:import:com.google.gwt.editor.ui.client.adapters'
	xmlns:b='urn:import:com.bradley.gwt.user.client.ui'>
	
	<ui:style>
    .contents {
        display: inline;
    }
    .errorLabel {
        display: none;
        white-space: pre;
        float: right;
        color: red;
        margin-left: 10px;
        margin-top: 3px;
    }
  </ui:style>
  <g:HTMLPanel>
    <div class="{style.errorLabel}" ui:field="errorLabel" />
    <g:SimplePanel ui:field="contents" stylePrimaryName="{style.contents}" />
  </g:HTMLPanel>
</ui:UiBinder>