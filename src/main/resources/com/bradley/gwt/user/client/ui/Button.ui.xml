<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.button {
			color: #444;
			float: left; /* Forces width to fit contents */
			-moz-border-radius: 3px;
			-webkit-border-radius: 3px;
			border-radius: 3px;
			o-border-radius: 3px;
			khtml-border-radius: 3px;
			font-size: 11px;
			height: 18px;
		}
	</ui:style>
	<g:PushButton ui:field="button" addStyleNames="{style.button}" />
</ui:UiBinder>